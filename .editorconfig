# http://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[script/**]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4
